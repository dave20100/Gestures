<Window x:Class="Gestures.MainSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestures"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        
        Title="MainSettings" Height="200" Width="800">
    <Grid>
        <Button Content="Hide/Show gesture field" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="HideFieldButton" Background="Beige" Height="169" />
        <Button Content="Mouse mode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"  Background="Beige" Height="169" Margin="200,0,0,0" />
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"  Background="Beige" Height="169" Margin="400,0,0,0" Click="Button_Click" />
        <Button Content="Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Background="Beige" Height="169" Margin="600,0,0,0" Click="ShowSettingsButton" />
    </Grid>
</Window>